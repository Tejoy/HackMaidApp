<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title_user_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="FirstName LastName"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/user_mail_id"
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:hint="example@domain.com"
            android:layout_below="@id/title_user_name" />

        <EditText
            android:id="@+id/title_phone_number"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="9522000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_mail_id" />

        <Button
            android:id="@+id/button_check_avail"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/title_phone_number"
            android:layout_centerHorizontal="true"
            android:text="Login" />
    </RelativeLayout>
</RelativeLayout>