<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="ProgressScreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:opacity">transparent</item>
    </style>

    <style name="MyTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/dark_yellow</item>
        <item name="colorPrimaryDark">@color/light_yellow_background</item>
        <item name="colorAccent">@color/light_yellow</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/material_button</item>
    </style>
</resources>
